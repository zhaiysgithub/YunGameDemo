<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/kp_game_bg">

    <ImageView
        android:id="@+id/ivLoadingBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="46dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@mipmap/kp_game_back"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading_animationView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            app:lottie_fileName="lot_game_loading.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            />

        <kptech.game.kit.view.LoadingSeekBar
            android:id="@+id/loadingSeekbar"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:duplicateParentState="true"
            android:max="100"
            android:padding="0dp"
            android:progress="10"
            android:progressDrawable="@drawable/loading_bd_bg"
            android:splitTrack="false"
            android:thumb="@null"
            tools:ignore="UnusedAttribute" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏在路上啦~"
            android:textSize="14sp"
            android:layout_marginTop="21dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</FrameLayout>