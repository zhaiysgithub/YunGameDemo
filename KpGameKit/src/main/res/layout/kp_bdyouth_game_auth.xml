<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/kp_game_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <kptech.game.kit.view.RoundImageView
            android:id="@+id/ivAuthGameIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:radius="20dp"
            />

        <TextView
            android:id="@+id/tvAuthGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="三国志"
            android:layout_marginTop="9dp"
            android:textSize="13sp"
            android:textColor="#FFF"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请获取账号信息"
            android:layout_marginTop="35dp"
            android:textSize="14sp"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvAuthLogin"
            android:layout_width="119dp"
            android:layout_height="40dp"
            android:text="授权登录"
            android:textSize="16sp"
            android:textColor="#1F1F1F"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="17dp"
            android:background="@drawable/kp_shape_reload"
            tools:ignore="HardcodedText,SmallSp" />
    </LinearLayout>

</FrameLayout>