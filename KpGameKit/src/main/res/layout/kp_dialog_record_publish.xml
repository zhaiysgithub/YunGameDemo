<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kp_record_publish_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/down_notify_common_dark"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布视频"
                android:textSize="18sp"
                android:textColor="@color/down_notify_common_dark"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kp_ic_record_publish_title"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>

        <ImageButton
            android:id="@+id/finish_publish"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@mipmap/kp_ic_record_publish"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:background="@null"/>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dip"
    android:background="@color/common_line_gray"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"
        android:gravity="top">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享标题:"
            android:textSize="14sp"
            android:textColor="@color/down_notify_common_dark"
            android:gravity="top"
            android:layout_marginTop="3dp"
            />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="5dp"
            android:lines="4"
            android:background="@drawable/kp_dialog_edit_bg"
            android:layout_toRightOf="@+id/title"
            android:textSize="15sp"
            android:gravity="top"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:hint="给视频取一个吸引人的标题吧~"
            />

        <TextView
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/25"
            android:textSize="12sp"
            android:textColor="#ff5f60"
            android:layout_alignRight="@id/et_title"
            android:layout_alignBottom="@id/et_title"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_title"
            android:layout_alignLeft="@id/et_title"
            android:text="提示：纯数字及字母标题无法发布"
            android:textSize="11sp"
            android:textColor="@color/common_font_gray"
            android:layout_marginTop="3dp"
            />


    </RelativeLayout>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/common_line_gray"
        android:layout_marginTop="10dp"
        />


