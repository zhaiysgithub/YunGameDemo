<?xml version="1.0" encoding="utf-8"?>
<!--横向显示的-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--背景图-->
    <ImageView
        android:id="@+id/ivMiniCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/mini_view_pro_bg"
        android:paddingTop="27dp"
        android:paddingBottom="42dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMiniProTitle"
            android:layout_width="243dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@mipmap/mini_ic_load_entering"
            tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/layoutMiniProgress"
            android:layout_width="320dp"
            android:layout_height="18dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp">

            <kptech.game.kit.view.LoadingSeekBar
                android:id="@+id/seekbarMiniLoading"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:max="100"
                android:progress="50"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progressDrawable="@drawable/mini_seekbar_loading_running"
                android:splitTrack="false"
                android:thumb="@null"
                tools:ignore="UnusedAttribute"/>

            <!--@mipmap/mini_ic_load_rock_run-->

            <TextView
                android:id="@+id/tvMiniProValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                tools:ignore="HardcodedText" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tvMiniLoadDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="游戏启动中，请耐心等待～"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <!--下载，重新加载-->
        <LinearLayout
            android:id="@+id/layoutMiniLoadError"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/layoutMiniDown"
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                tools:ignore="UselessParent">

                <ProgressBar
                    android:id="@+id/proMiniDown"
                    android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
                    android:indeterminateOnly="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:progressDrawable="@drawable/mini_prodown_load"
                    android:max="100"
                    android:splitTrack="false"
                    android:progress="0"/>

                <TextView
                    android:id="@+id/tvMiniDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:text="立即下载"
                    android:textStyle="bold"
                    android:textColor="#333"
                    tools:ignore="HardcodedText" />
            </FrameLayout>


            <TextView
                android:id="@+id/tvMiniRetry"
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:text="重新试玩"
                android:background="@drawable/mini_retry_load"
                android:textStyle="bold"
                android:textColor="#FFF"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>