<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/kp_dialog_bg"
    android:padding="20dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bottom_ll"
        android:gravity="center">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您长时间未操作，游戏已释放。"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exit_game"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="#ff3a3a"
            android:background="@drawable/kp_game_cancel_btn"
            android:text="退出游戏"/>

        <Button
            android:id="@+id/reload"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:background="@drawable/kp_game_submit_btn"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:text="重新连接"/>

    </RelativeLayout>

</LinearLayout>
