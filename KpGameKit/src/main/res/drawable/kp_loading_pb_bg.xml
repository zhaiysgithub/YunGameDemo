<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:height="10dp" android:gravity="center_vertical">
        <shape>
            <corners android:radius="5dp"/>
            <solid android:color="#4F4F4F"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress" android:height="10dp" android:gravity="center_vertical">
        <clip>
            <shape>
                <corners android:radius="5dp"/>
                <solid android:color="#4F4F4F"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress" android:height="10dp" android:gravity="center_vertical">
        <clip>
        <shape android:shape="rectangle"  >
            <gradient android:type="linear" android:useLevel="true" android:startColor="#fff4c792" android:endColor="#ffff6915" android:angle="0" />
            <corners android:radius="5dp" />
        </shape>
        </clip>
    </item>
</layer-list>