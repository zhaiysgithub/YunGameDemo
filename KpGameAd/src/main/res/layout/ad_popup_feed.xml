<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:clickable="true"
    tools:ignore="SpUsage">
    <RelativeLayout
        android:id="@+id/zmt_item_ad_RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/zmt_item_ad_LinearLayout1"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/rl_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zmt_item_ad_title_textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#292d30"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/zmt_item_ad_des_textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zmt_item_ad_title_textView1"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#a0000000" />

                <RelativeLayout
                    android:id="@+id/rl_content"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_below="@+id/zmt_item_ad_des_textView1">

                    <ImageView
                        android:id="@+id/zmt_item_ad_imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:contentDescription="图片"
                        android:scaleType="fitXY"
                         />

                    <ImageView
                        android:id="@+id/zmt_item_ad_imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:contentDescription="图片"
                        android:scaleType="centerCrop"

                        android:visibility="gone" />

                    <FrameLayout
                        android:id="@+id/zmt_item_ad_video5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_content2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/zmt_item_ad_imageView3"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:contentDescription="图片"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/zmt_item_ad_title_textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/zmt_item_ad_imageView3"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#292d30"
                    android:textSize="15.0dp" />

                <TextView
                    android:id="@+id/zmt_item_ad_des_textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zmt_item_ad_title_textView3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/zmt_item_ad_imageView3"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#a0000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_content3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/zmt_item_ad_title_textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#292d30"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/zmt_item_ad_des_textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zmt_item_ad_title_textView4"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#a0000000" />

                <LinearLayout
                    android:id="@+id/zmt_ad_image_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/zmt_item_ad_des_textView4"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/zmt_item_ad_imageView41"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:contentDescription="图片"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/zmt_item_ad_imageView42"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:contentDescription="图片"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:id="@+id/zmt_item_ad_imageView43"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:contentDescription="图片"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/rl_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="3dp">

                    <ImageView
                        android:id="@+id/zmt_item_logo_imageView1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:contentDescription="图片"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/zmt_item_advertising_textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/zmt_item_logo_imageView1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="广告"
                        android:textColor="#a3afbf"
                        android:textSize="10dp" />
                </LinearLayout>

                <!--<ImageView-->
                    <!--android:id="@+id/zmt_item_close_imageView1"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:contentDescription="图片"-->
                    <!--android:scaleType="centerCrop"-->
                    <!--android:padding="8dp"-->
                    <!--/>-->
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/zmt_item_close_imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="图片"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/adremind_dialog_close_btn"
        />
</RelativeLayout>