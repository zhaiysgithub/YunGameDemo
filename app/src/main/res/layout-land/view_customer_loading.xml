<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLoadingTitle"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="游戏试玩" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconGame"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@mipmap/ico_default"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tvGameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="游戏名称" />

    <TextView
        android:id="@+id/tvProgressValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#FFA200"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="50%" />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/loadingSeekbar"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:duplicateParentState="true"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/loading_customer_bg"
        android:splitTrack="false"
        android:thumb="@null"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/tvLoadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#989898"
        android:textSize="13sp"
        tools:text="游戏后台下载中，即将进入抢先试玩" />
</LinearLayout>